@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>
    <h3 class="display-4">SQL Write</h3>
    <h4>Success: @Model.WriteToRW.success.ToString()</h4>
    <h4>Server: @Model.WriteToRW.serverName</h4>
    @if (!Model.WriteToRW.success)
    {
        <h4>Error: @Model.WriteToRW.errorMessage</h4>
    }
</div>
